@model AccountRegisterViewModel

<div class="row">
    <div class="col col-5 border border-info mx-auto">
        <h3>@ViewBag.PageTitle</h3>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Firstname"></label>
                <input asp-for="Firstname" class="form-control">
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname"></label>
                <input asp-for="Lastname" class="form-control">
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress"></label>
                <input asp-for="EmailAddress" class="form-control">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordRepeat"></label>
                <input asp-for="PasswordRepeat" class="form-control">
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
            </div>
            @* generate select list *@
            <div class="form-group">
                <label asp-for="CountryCode"></label>
                <select asp-for="CountryCode" class="form-select" asp-items="@Model.Countries"></select>
            </div>
            @* generate checkbox list *@
            <div class="form-group">
                @for(int i = 0; i < Model.Roles.Count(); i++ )
                { 
                    <input asp-for="@Model.Roles[i].Value" />
                    <input asp-for="@Model.Roles[i].Text" />
                    <label asp-for="@Model.Roles[i].IsSelected">@Model.Roles[i].Text</label>
                    <input class="form-check-inline" asp-for="@Model.Roles[i].IsSelected" />
                }
            </div>
            <button type="submit" class="btn btn-primary mb-1 mt-1">Register</button>
        </form>
    </div>
</div>


